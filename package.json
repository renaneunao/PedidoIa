{
  "name": "pedidoia",
  "version": "1.0.0",
  "description": "Sistema inteligente de atendimento de pedidos de delivery utilizando LLM, integrado com Waha (WhatsApp API) e N8N",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:build": "docker build -t pedidoia .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "deploy:setup": "bash scripts/setup-vps.sh",
    "deploy": "bash scripts/deploy.sh"
  },
  "keywords": [
    "whatsapp",
    "delivery",
    "ai",
    "llm",
    "automation",
    "n8n",
    "waha"
